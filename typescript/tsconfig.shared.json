{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        // Skip type checking of all declaration files
        "skipLibCheck": true,
        // Allow default imports from modules with no default export
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        // Don't allow any javascript files import in ts files
        "allowJs": false,
        // Import non-ES modules as default imports
        "esModuleInterop": true,
        // Disallow features that require cross-file information for emit
        "isolatedModules": true,
        // We don't create declaration files when linting
        "noEmit": true,
        "paths": {
            "@typescript/*": ["./*"],
            "@utils/*": ["../jest/utils/*"],
            "@styles/*": ["../packages/styles/src/*"],
            "@react-components/*": ["../packages/react-components/src/*"],
            "@orbit-ui/styles": ["../packages/styles/src/*"]
        }
    }
}
